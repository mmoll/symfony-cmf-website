{% extends "CmfSimpleCmsBundle:Page:index.html.twig" %}

{% block content %}
    <div xmlns:sioc="http://rdfs.org/sioc/ns#" xmlns:dcterms="http://purl.org/dc/terms/" xmlns:skos="http://www.w3.org/2004/02/skos/core#" typeof="sioc:Post" about="{{ cmfMainContent.path }}">
        <h2 property="dcterms:title">{{ cmfMainContent.title }}</h2>

        <div class="subtitle">Date: {{ cmfMainContent.publishStartDate|date('Y-m-d') }}</div>
        <p property="sioc:content">{{ cmfMainContent.body|raw }}</p>

        {% set prev = cmf_prev(cmfMainContent) %}
        {% if prev and cmf_is_linkable(prev) %}
            <a href="{{ path(prev) }}">prev</a>
        {% endif %}
        {% set next = cmf_next(cmfMainContent) %}
        {% if next %}
            <span style="float: right; padding-right: 40px;"><a href="{{ path(next) }}">next</a></span>
        {%  endif %}
    </div>

{% endblock %}
